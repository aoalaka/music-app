<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingTop="32dp"
    android:background="#474733">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/song_title_now_playing"
        android:paddingBottom="16dp"
        android:layout_gravity="center"
        android:textSize="@dimen/font_large"
        android:textStyle="bold"
        android:textColor="#f9f9f7"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/qur_an_picture"
        android:src="@drawable/now_playing_background"
        android:layout_gravity="center"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"
        android:layout_gravity="center">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/previous"
            android:layout_weight="1"
            android:src="@drawable/icons8_rewind_50"
            android:padding="16dp"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/play_pause"
            android:src="@drawable/icons8_pause_50"
            android:layout_weight="1"
            android:padding="16dp"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/next"
            android:layout_weight="1"
            android:src="@drawable/icons8_fast_forward_50"
            android:padding="16dp"/>
    </LinearLayout>
</LinearLayout>
